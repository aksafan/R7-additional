<div id="<%= dom_id customer %>">
  <p>
    <strong>Full name:</strong>
    <%= customer.full_name %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= customer.phone %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= customer.email %>
  </p>

  <div class="<%= dom_class customer.order %>>">
    <%= render "customer_orders", orders: customer.order %>
  </div>

</div>
